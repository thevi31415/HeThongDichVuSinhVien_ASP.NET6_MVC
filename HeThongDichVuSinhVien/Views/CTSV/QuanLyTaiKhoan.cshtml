@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model X.PagedList.IPagedList<DangNhap>
@{
    Layout = "~/Views/Shared/CTSV_Layout.cshtml";
}
<style>
  
    h1 {
        color: #3498db;
        text-align: center;
        margin-bottom: 0px;
    }
  
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        border-radius: 5px;
    }

    th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        transition: background-color 0.3s ease;
    }

    th {
        background-color: #3155A6;
        color: white;
    }

    tbody tr:hover {
        background-color: #f8f8f8;
    }

        tbody tr:hover td {
            background-color: #e0e0e0;
        }

    .pagination {
        display: inline-block;
        list-style: none;
        padding: 0;
        text-align: center;
        margin-top: 10px;
    }

        .pagination li {
            display: inline;
            margin-right: 5px;
        }

        .pagination a, .pagination span {
            color: #333;
            padding: 10px 15px;
            text-decoration: none;
            border: 1px solid #ddd;
            background-color: #f5f5f5;
            border-radius: 3px;
            transition: background-color 0.3s ease;
        }

        .pagination .disabled span {
            color: #999;
        }

        .pagination .active span {
            background-color: #3498db;
            color: white;
        }

    td.actions {
        text-align: center;
    }

        td.actions a {
            display: inline-block;
            margin: 0 5px;
            padding: 8px 12px;
            text-decoration: none;
            color: #fff;
            border-radius: 3px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        td.actions .edit {
            background-color: #3498db;
        }

        td.actions .delete {
            background-color: #e74c3c;
        }

        td.actions a:hover {
            opacity: 0.8;
        }

    .btnthemtaikhoan {
        display: inline-block;
        padding: 10px 15px;
        font-size: 16px;
        text-align: center;
        text-decoration: none;
        border-radius: 25px;
        transition: background-color 0.3s ease, color 0.3s ease;
        background-color: #3498db;
        color: white;
        cursor: pointer;
    }

        .btnthemtaikhoan:hover {
            background-color: #2980b9;
        }

        .btnthemtaikhoan i {
            margin-right: 8px;
        }
</style>

<div class='content'>
    <h1>Quản lý tài khoản</h1>
    <a asp-controller="CTSV" asp-action="" class="btnthemtaikhoan"> <i class="bi bi-plus-square-fill"></i> &nbsp Thêm tài khoản</a>
    <table>
        <thead>
            <tr>
                <th>STT</th>
                <th>Mã người dùng</th>
                <th>Tên đăng nhập</th>
                <th>Mật khẩu</th>
                <th>Vai trò</th>
                <th>Lượt truy cập</th>
                <th>Truy cập gần nhất</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                var stt = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@stt</td>
                    <td><strong>@item.MaNguoiDung</strong></td>
                    <td>@item.TenDangNhap</td>
                    <td>@item.MatKhau</td>
                    <td>@item.VaiTro</td>
                    <td>@item.LuotTruyCap</td>
                    <td>@item.TruyCapGanNhat</td>
                    <td class="actions">
                        <a  class="edit"><i class="bi bi-pencil-fill"></i>  &nbsp Edit</a>
                        <a asp-controller="CTSV" asp-action="XoaTaiKhoan" asp-route-id="@item.ID" class="delete"> <i class="bi bi-trash3-fill"></i> &nbsp Delete</a>
                    </td>
                </tr>
                stt++;
            }
        </tbody>
    </table>
    <div class="pagination">
        @Html.PagedListPager(Model, page => Url.Action("QuanLyTaiKhoan", new { page = page }))
    </div>
</div>
<style>
    .context {
        height: 200vh;
    }
</style>